@model FilmLibraryCore.Models.FilmName

@{
    ViewData["Title"] = "FilmName";
}

<h2>Please Enter Movie Name</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FilmName">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="filmName" class="control-label"></label>
                <input asp-for="filmName" class="form-control" />
                <span asp-validation-for="filmName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


